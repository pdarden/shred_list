<%= simple_form_for([@equipmentable, @equipment]) do |f| %>
  <%= f.association :brand, collection: Brand.all %>
  <%= f.association :category, collection: Category.all %>
  <%= f.association :riding_style, collection: RidingStyle.all %>
  <%= f.input :price_in_dollars, label: 'Original Price' %>
  <%= f.submit "Create Equipment" %>
<% end %>
