<h1 class='text-center'>Editing Listing</h1>
<%= render 'form' %>

<script>
  $(document).ready(function() {
    $('.listing_asking_items').hide();
    $("[name='listing[trade]']").change(function(){
      if($(this).val()=="false") {
        $('.listing_asking_items').hide();
      }else{
        $('.listing_asking_items').show();
      }
    });
  });
</script>
