<h1 class='text-center'>Create New Listing</h1>
<div class="alert alert-warning alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <h3>Sell or trade your equipment(s) in 2 easy steps!</h3>
  <ol class="info">
    <li>Add details of the listing.</li>
    <li>Add details of your equipment(s) on the next page.</li>
  </ol>
</div>
<%= render 'form' %>

<script>
  $(document).ready(function() {
    $('.listing_asking_items').hide();
    $("[name='listing[trade]']").change(function(){
      if($(this).val()=="false") {
        $('.listing_asking_items').hide();
      }else{
        $('.listing_asking_items').show();
      }
    });
  });
</script>
