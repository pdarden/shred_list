<h1 class='text-center'>Create New Listing</h1>
<div class="alert alert-warning alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <h3>Sell or trade your equipment(s) in 2 easy steps!</h3>
  <ol class="info">
    <li>Add details of the listing.</li>
    <li>Add details of your equipment(s) on the next page.</li>
  </ol>
</div>
<%= render 'form' %>

<%= content_for :extra_footer do %>
  <script>
    $(document).ready(function() {
      $('.listing_asking_items').toggle();
      $("[name='listing[trade]']").change(function(){
        $('.listing_asking_items').toggle();
      });
    });
  </script>
<% end %>
