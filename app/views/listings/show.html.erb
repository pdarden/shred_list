<div class="col-md-6">
  <h1><%= @listing.title %></h1>
  <%= @listing.description %>
</div>

<div class="col-md-6">
  <h4>Equipments:</h4>
  <% @listing.equipment.each do |equipment| %>
    <%= equipment.brand.try(:name) %>
    <%= equipment.category.try(:name) %>
    <%= link_to 'Edit', edit_listing_equipment_path %>
  <% end %>
  <% if @listing.owned_by?(current_user) %>
    <%= link_to 'New Equipment', new_listing_equipment_path(@listing) %>
  <% end %>
</div>

