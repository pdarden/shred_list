<%= simple_form_for([@listing, @offer]) do |f| %>
  <div class="well">
    <%= f.input :description, label: "Description (add pictures after creating message)", as: :text %>
    <%= f.input :private_message, as: :boolean, checked_value: true, unchecked_value: false %>
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>

