<div class="col-md-8 col-md-offset-2 wrapper">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-vertical' }) do |f| %>
    <%= f.input :first_name, label: 'First Name', autofocus: true %>
    <%= f.input :last_name, label: 'Last Name' %>
    <%= f.input :username %>
    <%= f.input :email, as: :email %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <%= f.input :password, label: "Password (leave blank if you don't want to change it)", as: :password, autocomplete: "off" %>
    <%= f.input :password_confirmation, label: "Password Confirmation", as: :password %>
    <%= f.input :current_password, label: "Current Password (we need your current password to confirm your changes)", as: :password %>
    <%= f.submit "Update", class: "btn btn-success" %>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

  <%= link_to "Back", :back %>
</div>

