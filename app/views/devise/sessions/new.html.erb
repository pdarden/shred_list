<div class="col-md-8 col-md-offset-2 wrapper">
  <h2>Sign In</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-vertical' }) do |f| %>
    <%= f.input :login, autofocus: true, label: "Username or Email" %>

    <%= f.input :password, as: :password %>

     <% if devise_mapping.rememberable? -%>
       <div class="checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
     <% end %>

    <%= f.submit "Sign In", class: "btn btn-success" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

