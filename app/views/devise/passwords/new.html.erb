<div class="col-md-8 col-md-offset-2">
  <h2>Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-vertical' }) do |f| %>
    <%= f.input :login, autofocus: true %>
    <%= f.submit "Send me reset password instructions", class: "btn btn-success" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

