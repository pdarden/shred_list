<div class="col-md-8 col-md-offset-2 wrapper">
  <h2>Change your password</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-vertical' }) do |f| %>
    <%= f.input :reset_password_token, as: :hidden %>

    <%= f.input :password, label: "New Password", as: :password, autofocus: true %>

    <%= f.input :password_confirmation, label: "Confirm new password", as: :password %>

    <%= f.submit "Change my password", class: "btn btn-success" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

